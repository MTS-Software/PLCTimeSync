<?xml version="1.0"?><!--In dieser Datei sind Verbindungen zu den Steuerung eingetragen.-->
<root>
	<!--Intervall der Uhrzeitsynchronisation in Sekunden-->
	<syncinterval time="5"></syncinterval>
	<!--Verbindungseinstellungen zu den Steuerungen. Um Steuerungen hinzuzufÃ¼gen, 
		einfach die Struktur "plc" kopieren und die Einstellungen anpassen. -->
	<devices>
		<plc name="M02100">
			<ip>192.168.0.1</ip>
			<rack>0</rack>
			<slot>2</slot>
			<connectiontimeout>2000</connectiontimeout>
			<readtimeout>2000</readtimeout>
		</plc>
		<plc name="M03100">
			<ip>192.168.0.2</ip>
			<rack>0</rack>
			<slot>2</slot>
			<connectiontimeout>2000</connectiontimeout>
			<readtimeout>2000</readtimeout>
		</plc>
	</devices>
</root>
	